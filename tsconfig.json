{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "lib",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["jest"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@antv/g2": ["src"]
    }
  },
  "include": ["src"],
  "typedocOptions": {
    "mode": "file",
    "out": "docs/api",
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeExternals": true,
    "plugin": "typedoc-plugin-markdown",
    "theme": "./bin/typedoc-theme"
  }
}
